{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "inlineSources": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "lib": ["es6", "dom"],
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmit": true,
    "sourceMap": true,
    "sourceRoot": "./src",
    "strict": true,
    "target": "esnext",
    "typeRoots": ["./declarations", "./node_modules/@types/"],
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./*"],
      "@styles/*": ["./src/styles/*"]
    },
    "noImplicitThis": true
  },
  "include": [
    "src/**/*",
    ".eslintrc.cjs",
    "declarations",
    "./babel.config.js",
    "./jest.config.ts",
    "./webpack.config.js",
    "src/shared/config/jest/jestEmptyComponent.tsx"
  ],
  "exclude": ["node_modules", "build"]
}
